
  <view>
    <view>
      <input class="searchBox" placeholder="键入自动搜索"/>
    </view>
    <block wx:for="{{dataList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
      
  <view class="item">
    <image class="logo" src="../static/images/logo.jpeg"/>
    <text>{{item.name}}</text>
    <text>{{item.description}}</text>
    <image class="star" src="{{item.starred ? '../static/images/icon_star_filled.png' : '../static/images/icon_star_empty.png' }}" bindtap="$item$tapStar" data-com-index="{{index}}" data-wpytapstar-a=""/>
    <image class="copy" src="../static/images/icon_star_filled.png" bindtap="$item$tapCopy" data-com-index="{{index}}"/>
  </view>

    </block>
  </view>